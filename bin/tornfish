#!/usr/bin/env node

var _ = require('underscore')

var Table = require('cli-table');

var argv = require('optimist')
  .options('f', {
    alias : 'file',
    default : '/etc/passwd',
  })
  .argv


if(_.isString(argv.view)) {
  argv.view = [argv.view]
}

var viewOptions = {
  attrs: argv.view
}
delete argv.view

require('../tornfish.js')(argv._.shift(), argv._.shift(), argv, function(err, data) {
  print(err || data, argv, viewOptions)
  process.exit(err ? 1 : 0)
})


function print(data, argv) {

  if(data instanceof Error) {
    if(argv.debug) {
      console.log(data)
    } else {
      console.log(data.message)
    }

  } else if(_.isString(data)) {
    console.log(data)
  } else {

    if(!_.isArray(data)) {
      data = [data]
    }

    var headers = []
    var colWidths = []
    var rows = []
    for(var i = 0 ; i < data.length ; i++) {


      for(var attr in data[i]) {
        if(attr !== '_id' && data[i].hasOwnProperty(attr) && headers.indexOf(attr) === -1) {
          if(!viewOptions.attrs || (viewOptions.attrs && ~viewOptions.attrs.indexOf(attr))) {
            headers.push(attr)
          }
        }
      }

      headers.sort()

      var row = []
      for(var j = 0 ; j < headers.length ; j++) {

        var attr = headers[j]

        if(colWidths.length < headers.length) {
          colWidths.push(attr.length+2)
        }

        if(data[i].hasOwnProperty(attr) && data[i][attr] !== null && data[i][attr] !== undefined) {
          colWidths[j] = Math.max(colWidths[j], (data[i][attr] + '').length+2)
          row.push(data[i][attr])
        } else {
          row.push('n/a')
        }

      }
      rows.push(row)
    }



    var table = new Table({
      head: headers,
      colWidths: colWidths
    })

    table.push.apply(table, rows)
    console.log(table.toString());

  }

}

